{
  "rules": {
    ".read": false,
    ".write": false,
    "live_heartbeats": {
      "$userID": {
        ".read": "auth != null",
        ".write": "false",
        "bpm": {
          ".write": "$userID === auth.uid",
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 300"
        },
        "timestamp": {
          ".write": "$userID === auth.uid",
          ".validate": "newData.isNumber()"
        },
        "connections": {
          ".write": "auth != null",
          ".read": "$userID === auth.uid",
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 10000"
        }
      }
    },
    "notification_triggers": {
      "$userID": {
        ".write": "$userID === auth.uid",
        ".read": false,
        "t": {
          ".validate": "newData.isNumber()"
        }
      }
    }
  }
}
